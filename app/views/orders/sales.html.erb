<div class='center'>
    <h2> Your Sales History</h2>
</div>
<table class='table table-striped table-bordered center'>
 <tr>
    <th class='center'>Image</th>
    <th class='center'>Item</th>
    <th class='center'>Price</th>
    <th class='center'>Customer</th>
    <th class='center' >Date Sold</th>
 </tr>
 <% @orders.each do |order| %>
 <tr>
    <td><h4><%= image_tag order.listing.image.url(:thumb)%></h4></td>
    <td><h4><%= order.listing.name %></h4></td>
    <td><h4><%= number_to_currency(order.listing.price) %></h4></td>
    <td><h4><%= order.buyer.name%></h4></td>
    <td><h4><%= order.created_at.strftime("%B %-d, %Y")%> </h4></td>
 </tr>
 <%end%>   
</table>

<br>
<%if user_signed_in?%>
<%= link_to 'New Listing', new_listing_path , class: 'btn btn-link'%>
<%end%> 