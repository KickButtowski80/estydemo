<div class='jumbotron'>
   <div class='container center'>
      <h1>Handcrafted items from around the world.</h1>
      <br>
      <h2>Dicover one-of-a-king items</h2>
   </div>
</div>


<div class='center'>
   <div class='row'>
      <% @listings.each do |listing| %>
      <div class='col-md-3'>
            <div class="thumbnail">
               <%if user_signed_in?%>
                  <%=link_to  image_tag(listing.image.url(:small)) , listing%>
               <%else%>
                  <%=  image_tag(listing.image.url(:small)) %>
               <%end%>   
               <div class="caption">
                 <h3><%= listing.name %></h3>
                 <p><%= number_to_currency(listing.price)%></p> 
                 <p><%=  "sold by #{listing.user.name}"%></p>
               </div>
            </div>
           
      </div>
      <%end%> 
   </div>
</div>
<br>
<%if user_signed_in?%>
   <%= link_to 'New Listing', new_listing_path , class: 'btn btn-link'%>
<%end%> 